---
import Logo from "./Logo.astro"
---
<header id="header-nav" class="h-16 w-full max-w-7xl top-0 fixed py-2 z-50 mx-auto px-6">
    <div class="justify-between items-center flex">
    <div class="w-60">
        <a href="#video" class="">
            <Logo class="w-32" />
        </a>
    </div>
    <nav class="w-full hidden md:flex md:justify-center items-center gap-x-10 font-semibold">
        <a class="lg:text-base text-sm hover:underline hover:cursor-pointer">VOTÁ</a>
        <a class="lg:text-base text-sm">INFO</a>
        <a class="lg:text-base text-sm">ARCHIVO</a>
    </nav>
    <div class="w-60 hidden md:flex justify-center items-center whitespace-nowrap px-6 py-1 border rounded-[25px] font-semibold">
        <button class="lg:text-base text-sm">
            ESLAND: EL DOCUMENTAL
        </button>
    </div>
    <div class="md:hidden px-6 py-2 flex items-center">
        <button id="menu-hamburger" class="hover:cursor-pointer">
            <svg class="w-6 h-6 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
            </svg>
        </button>
    </div>
    </div>
    <nav id="menu-mobile" class="flex flex-col -translate-y-full justify-center items-center gap-y-10 h-screen w-full">
        <a class="lg:text-base text-sm">VOTÁ</a>
        <a class="lg:text-base text-sm">INFO</a>
        <a class="lg:text-base text-sm">ARCHIVO</a>
    </nav>
</header>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const menu_hamburger = document.getElementById('menu-hamburger')
        const menu_mobile = document.getElementById('menu-mobile')
        console.log(menu_hamburger + ' ' + menu_mobile + "hola")

        menu_hamburger?.addEventListener('click', function() {
            console.log('hola')
            menu_mobile?.classList.toggle('translate-y-0')
        })
        
})


</script>